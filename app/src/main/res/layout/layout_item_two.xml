    <TextView
        android:id="@+id/txt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Teste"
        android:gravity="center" />

</androidx.appcompat.widget.LinearLayoutCompat>