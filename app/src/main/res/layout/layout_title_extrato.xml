<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="16dp"
    app:cardCornerRadius="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical"
                android:text="Lançamentos dos últimos" />

            <ImageButton
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:src="@drawable/ic_btn_info"
                android:background="@android:color/transparent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp">

            <RadioButton
                android:id="@+id/radio_seven_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_segmented_left"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="7 dias"
                android:checked="true"
                android:textColor="@drawable/txt_segmented" />

            <RadioButton
                android:id="@+id/radio_fifteen_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="15 dias"
                android:textColor="@drawable/txt_segmented" />

            <RadioButton
                android:id="@+id/radio_thirty_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_segmented_center"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="30 dias"
                android:textColor="@drawable/txt_segmented" />

            <RadioButton
                android:id="@+id/radio_sixty_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_segmented_right"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:padding="8dp"
                android:text="60 dias"
                android:textColor="@drawable/txt_segmented" />
        </RadioGroup>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>